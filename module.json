{
  "title": "Netflix",

  "content_scripts": [
    {
      "id": "main",

      "conditions": [
        { "pageUrl": { "hostEquals": "netflix.com" } },
        { "pageUrl": { "hostEquals": "www.netflix.com" } }
      ],

      "matches": [
        "*://netflix.com/*",
        "*://www.netflix.com/*"
      ],

      "js": [
        "Common.js",
        "Modules/Common.js",
        "Modules/neon-extension-source-netflix/Main.js"
      ]
    }
  ],
  "services": [
    "Configuration",
    "Source:Activity"
  ],
  "origins": [
    "*://netflix.com/*",
    "*://www.netflix.com/*"
  ],
  "web_accessible_resources": [
    "Modules/neon-extension-source-netflix/Shim.js"
  ],

  "webpack": {
    "modules": {
      "Shim": { "entry": true }
    }
  }
}
